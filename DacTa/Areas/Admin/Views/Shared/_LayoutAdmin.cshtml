    <script>
        localStorage.removeItem("ds-sp");
        let selectedSP = null; 
        let label = null; 
        let quantity = 1; 
        document.querySelector("#ds-sp").addEventListener("change", function () {
            value = this.value;
            label = this.options[this.selectedIndex].text;
            console.log(`https://localhost:7240/api/products/${value}`);
            fetch(`https://localhost:7240/api/products/${value}`).then((response) => {
                return response.json(); 
            }).then(result => {
                document.getElementById("don-gia").value = result; 
            })
        })
        document.querySelector("#so-luong").addEventListener("change", function(e) {
            quantity = e.target.value; 
        })
        document.querySelector("#add-sp").addEventListener("click", function () {
            let table = document.getElementById("chi-tiet-sp");
            let tbody = table.getElementsByTagName("tbody")[0];

            let products = localStorage.getItem("ds-sp");
            let productList = [];
            if (products) {
                productList = JSON.parse(products);
            }
            let price = document.getElementById("don-gia").value;
            let index = productList.findIndex(item => {
                return item.maSp == value
            });
            if(index !== -1) {
                let shadowArr = [...productList]; 
                let product = shadowArr[index];
                let currentQuantity = parseInt(product.quantity); 
                currentQuantity += parseInt(quantity); 
                product.quantity = currentQuantity; 
                product.price = parseInt(price) * currentQuantity; 
                shadowArr[index] = product; 
                productList = [...shadowArr]; 
            }
           else productList.push({ maSp: value, tenSp: label, quantity, DonGia: parseInt(price), price: parseInt(price) * parseInt(quantity) });
            table.style.display = "block";
            let html = "";
            for (let i = 0; i < productList.length; ++i) {
                html += `<tr data-id="${productList[i].maSp}">`;
                for (let value of Object.values(productList[i])) {
                    html += `<td>${value}</td>`;
                }
                html += "</tr>";
            }
            tbody.innerHTML = html;
            localStorage.setItem("ds-sp", JSON.stringify(productList));
        })

        document.getElementById("them-hoa-don").addEventListener("submit", function(event) {
            event.preventDefault(); 
            let form = event.target; 
            let hdBan = {}; 
            for(i = 0; i < form.elements.length; ++i) {
                let element = form.elements[i];
                if (element.tagName === "INPUT" || 
                element.tagName === "SELECT" || element.tagName === "TEXTAREA") {
                    hdBan[element.name] = element.value;
                }
            }
            hdBan.TongTien = 0;
            let products = localStorage.getItem("ds-sp");
            let productList = [];
            if (products) {
                productList = JSON.parse(products);
            }
            productList.forEach(item => {
                item.MaHdb = hdBan.MaHdb
                item.MaHang = item.maSp; 
                item.SoLuong = parseInt(item.quantity); 
                item.ThanhTien = parseInt(item.price); 
                delete item["maSp"]; 
                delete item["quantity"]; 
                delete item["price"];
                delete item["tenSp"];

            }
            ); 
            console.log(hdBan);
            fetch('https://localhost:7240/api/products', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(hdBan)
            })
                .then(result => {
                    return result.json();
                })
                .then(async (result) => {
                    console.log(result);

                    try {
                        for (const item of productList) {
                            await fetch('https://localhost:7240/api/products/chitiethoadon', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify(item)
                            });
                            alert("Thêm hóa đơn bán thành công"); 
                            window.location = "https://localhost:7240/admin/DanhMucSanPham";
                        }
                    } catch (err) {
                        console.log(err);
                    }
                })
                .catch(err => {
                    console.log(err);
                });

        })
    </script>
